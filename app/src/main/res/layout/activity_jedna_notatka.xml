<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.JednaNotatka">

    <TextView
        android:id="@+id/jednanotatka_nazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/jednanotatka_typ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/jednanotatka_nazwa"/>

    <TextView
        android:id="@+id/jednanotatka_nazwakaktusa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/jednanotatka_typ"/>

    <ImageView
        android:id="@+id/jednanotatka_zdjecie"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_below="@id/jednanotatka_nazwakaktusa" />


</RelativeLayout>