<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:id="@+id/alternatywny_caly_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/alternatywny_image_view"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/container_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="112dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/alternatywny_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kaktusbackground">

        <ImageView
            android:id="@+id/alternatywny_imageView_zdjecie"
            android:layout_width="112dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/alternatywny_image_view"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kaktusbackground" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/alternatywny_nazwa"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:text="Kaktus Basi"
        android:maxLines="2"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/alternatywny_image_view" />

    <TextView
        android:id="@+id/alternatywny_gatunek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/alternatywny_nazwa" />

    <TextView
        android:id="@+id/alternatywny_miejsce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/alternatywny_gatunek"
        app:layout_constraintTop_toBottomOf="@+id/alternatywny_gatunek" />

    <TextView
        android:id="@+id/alternatywny_datadodania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="6dp"
        android:drawableLeft="@drawable/ic_calendar_24"
        android:text="12.07.2021"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/alternatywny_image_view"
        app:layout_constraintTop_toTopOf="@+id/alternatywny_nazwa" />

    <TextView
        android:id="@+id/alternatywny_data_podlania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/alternatywny_image_view"
        android:drawableLeft="@drawable/ic_woda_24"
        app:layout_constraintTop_toBottomOf="@+id/alternatywny_datadodania" />

    <TextView
        android:id="@+id/alternatywny_data_kwitniecia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:drawableLeft="@drawable/ic_kwiat_24"
        app:layout_constraintEnd_toEndOf="@+id/alternatywny_image_view"
        app:layout_constraintTop_toBottomOf="@+id/alternatywny_data_podlania" />

</androidx.constraintlayout.widget.ConstraintLayout>