<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/alt_notatka_zdj_row_grid_imageview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.95" />

    <ImageView
        android:id="@+id/alt_notatka_zdj_row_grid_imageview2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/alt_notatka_zdj_row_grid_imageview"
        app:layout_constraintTop_toTopOf="@+id/alt_notatka_zdj_row_grid_imageview"
        android:background="@drawable/ic_video_24" />

    <ImageView
        android:id="@+id/alt_notatka_zdj_row_grid_imageview3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/alt_notatka_zdj_row_grid_imageview"
        app:layout_constraintTop_toTopOf="@+id/alt_notatka_zdj_row_grid_imageview"
        android:background="@drawable/ic_image_24" />

    <ImageView
        android:id="@+id/alt_notatka_zdj_row_grid_imageview4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/ic_microphone_24"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/alt_notatka_zdj_row_grid_imageview"
        app:layout_constraintTop_toTopOf="@+id/alt_notatka_zdj_row_grid_imageview" />

    <ImageView
        android:id="@+id/alt_notatka_zdj_row_grid_imageview6"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/ic_microphone_24"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/alt_notatka_zdj_row_grid_imageview"
        app:layout_constraintTop_toTopOf="@+id/alt_notatka_zdj_row_grid_imageview" />

    <ImageView
        android:id="@+id/alt_notatka_zdj_row_grid_imageview5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/ic_edit_24"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/alt_notatka_zdj_row_grid_imageview"
        app:layout_constraintTop_toTopOf="@+id/alt_notatka_zdj_row_grid_imageview" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="2020-10-05 20:02"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/alt_notatka_zdj_row_grid_imageview"
        app:layout_constraintEnd_toEndOf="@+id/alt_notatka_zdj_row_grid_imageview" />
</androidx.constraintlayout.widget.ConstraintLayout>