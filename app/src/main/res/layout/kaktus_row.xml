<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="@color/white"
    android:id="@+id/kaktus_row_Caly_row"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:background="@color/light_green">

        <ImageView
            android:id="@+id/preview_zdj_kaktusa_row"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:id="@+id/nazwaKaktusa_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa kaktusa"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/gatunek_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gatunek kaktusa"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/nazwaMiejsca_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nazwa miejsca"
                android:textSize="15dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:id="@+id/datadodania_kaktusa_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data dodania"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/data_ost_podlania_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data ost. podlania"
                    android:textSize="15dp"
                    android:layout_marginTop="13dp"/>

                <TextView
                    android:id="@+id/data_ost_zakwitu_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data ost. zakwitu"
                    android:textSize="15dp"
                    android:layout_marginTop="17dp"/>
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>