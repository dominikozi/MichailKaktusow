<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/dialognotatka_film_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/GreenPL">

            <TextView
                android:id="@+id/dialog_notatka_film_nazwa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="Nazwa notatki" />

        </RelativeLayout>
        <RelativeLayout
        android:id="@+id/dialognotatka_audio_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/GreenPL">

        <TextView
            android:id="@+id/dialog_notatkazdjecie_nazwa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Data" />

    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/dialog_notatka_film_filmview_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <VideoView
                android:id="@+id/dialog_notatka_film_filmview"
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_notatka_film_zamknij"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_close_24"
                android:backgroundTint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="ZAMKNIJ" />

        </RelativeLayout>

    </LinearLayout>





</RelativeLayout>