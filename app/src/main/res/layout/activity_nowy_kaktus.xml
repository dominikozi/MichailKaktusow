<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.NowyKaktus"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Nazwa kaktusa"
                    android:textSize="10dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nowykaktus_textinputlayout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nowykaktus_textinputedittext_1_nazwakaktusa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/nowykaktus_textinputedittext_3_gatunek"
                        android:nextFocusForward="@id/nowykaktus_textinputedittext_3_gatunek"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Gatunek"
                    android:textSize="10dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nowykaktus_textinputlayout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nowykaktus_textinputedittext_2_gatunek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/nowykaktus_textinputedittext_3_gatunek"
                        android:nextFocusForward="@id/nowykaktus_textinputedittext_3_miejsce"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Nazwa miejsca"
                    android:textSize="10dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nowykaktus_textinputlayout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nowykaktus_textinputedittext_3_miejsce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:id="@+id/nowykaktus_linear_doukrywania_zdjecia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/new_kaktus_image_view"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:background="@drawable/imageview_border"
                        android:src="@drawable/kaktusbackground" />

                    <!--        <Button-->
                    <!--            android:layout_width="70dp"-->
                    <!--            android:layout_height="70dp"-->
                    <!--            android:background="@drawable/circular_button"-->
                    <!--            android:paddingTop="18dp"-->
                    <!--            android:drawableTop="@drawable/ic_image_24"-->
                    <!--            />-->

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/nowykaktus_zrobzdj"
                        style="@style/Widget.App.Button.OutlinedButton.Icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignRight="@id/new_kaktus_image_view"
                        android:layout_alignBottom="@id/new_kaktus_image_view"
                        android:backgroundTint="@color/szaretlo"
                        app:icon="@drawable/ic_add_photo_24"
                        app:iconGravity="textStart"
                        app:iconPadding="-0.5dp"
                        app:iconSize="24dp"
                        app:iconTint="@color/GreenP"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                        app:strokeColor="@color/GreenP" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/nowykaktus_dodajzdj"
                        style="@style/Widget.App.Button.OutlinedButton.Icon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignRight="@id/new_kaktus_image_view"
                        android:layout_alignBottom="@id/nowykaktus_zrobzdj"
                        android:layout_marginBottom="50dp"
                        android:backgroundTint="@color/szaretlo"
                        app:icon="@drawable/ic_image_24"
                        app:iconGravity="textStart"
                        app:iconPadding="-0.5dp"
                        app:iconSize="24dp"
                        app:iconTint="@color/GreenP"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                        app:strokeColor="@color/GreenP" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <Button
        android:id="@+id/nowykaktus_button_dodajkaktus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/zaokraglony_przycisk"
        android:drawableLeft="@drawable/ic_save_24"
        android:drawableTint="@color/GreenPD"
        android:text="Dodaj"
        android:textColor="@color/GreenPD"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>

