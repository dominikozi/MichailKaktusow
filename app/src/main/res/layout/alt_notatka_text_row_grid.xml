<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/alt_notatka_row_text_grid_layout">

    <ImageView
        android:id="@+id/alt_notatka_zdj_row_grid_imageview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/container_bg"
        app:layout_constraintDimensionRatio="1:0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.95" />
<!--        android:background="@color/light_gray"-->


    <TextView
        android:id="@+id/alt_notatka_text_row_grid_textview1"
        android:layout_marginStart="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:text="TextView"
        android:textSize="16sp"
        android:ellipsize="end"
        app:layout_constraintWidth_percent="0.70"
        app:layout_constraintStart_toStartOf="@+id/alt_notatka_zdj_row_grid_imageview"
        app:layout_constraintTop_toTopOf="@+id/alt_notatka_zdj_row_grid_imageview" />

    <TextView
        android:id="@+id/alt_notatka_text_row_grid_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintWidth_percent="0.70"
        app:layout_constraintBottom_toBottomOf="@+id/alt_notatka_zdj_row_grid_imageview"
        app:layout_constraintEnd_toEndOf="@+id/alt_notatka_zdj_row_grid_imageview" />

    <ImageView
        android:id="@+id/alt_notatka_text_row_grid_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/alt_notatka_zdj_row_grid_imageview"
        app:layout_constraintTop_toTopOf="@+id/alt_notatka_zdj_row_grid_imageview"
        android:background="@drawable/ic_edit_24" />

    <ImageView
        android:id="@+id/alt_notatka_text_row_grid_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/alt_notatka_zdj_row_grid_imageview"
        app:layout_constraintTop_toTopOf="@+id/alt_notatka_zdj_row_grid_imageview"
        android:background="@drawable/ic_microphone_24" />


</androidx.constraintlayout.widget.ConstraintLayout>